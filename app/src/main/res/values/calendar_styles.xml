<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="week_day_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:textColor">#ffadbb02</item>
    </style>

    <style name="current_day">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#adbb02</item>
    </style>

    <style name="active_month_day">
        <item name="android:textColor">#697202</item>
    </style>

    <style name="passive_month_day">
        <item name="android:textColor">#cccccc</item>
    </style>

    <style name="calendar_event_style" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#FF6600</item>
        <item name="android:textStyle">bold</item>
        <!--<item name="android:textSize">8sp</item>-->
    </style>
</resources>
