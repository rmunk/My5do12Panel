<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="month_text">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textColor">@color/calendar_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="day_text">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textColor">@color/app_green_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="week_day_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:textColor">@color/calendar_text</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="hour_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:textColor">@color/app_green_dark</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="current_day">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/calendar_text_accented</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="active_month_day">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/calendar_text</item>
    </style>

    <style name="passive_month_day">
        <item name="android:textColor">@color/calendar_text_light</item>
    </style>

    <style name="calendar_events_style" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/calendar_text</item>
        <item name="android:textStyle">bold</item>
        <!--<item name="android:textSize">8sp</item>-->
    </style>

    <style name="calendar_new_events_style" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/calendar_text_accented</item>
        <item name="android:textStyle">bold</item>
        <!--<item name="android:textSize">8sp</item>-->
    </style>

    <style name="daily_event_style">
        <!--<item name="android:padding">5dp</item>-->
        <!--<item name="android:layout_margin">5dp</item>-->
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="calendar_event_details" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/calendar_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
    </style>
</resources>
